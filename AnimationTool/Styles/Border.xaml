<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Border" x:Key="BorderArea">
        <Setter Property="BorderBrush" Value="{StaticResource BrushBackBlue2}" />
        <Setter Property="Background" Value="{StaticResource BrushBorder2}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="20"></Setter>
    </Style>
    
    <Style TargetType="Border" x:Key="BorderArea2" BasedOn="{StaticResource BorderArea}">
        <Setter Property="Background" Value="{StaticResource BrushBorder3}" />
    </Style>
    
    <Style TargetType="Border" x:Key="BorderArea3" BasedOn="{StaticResource BorderArea}">
        <Setter Property="Background" Value="{StaticResource BrushHover}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder2}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
    
    <Style TargetType="Label" x:Key="BorderLabel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Label">
                    <Border Style="{StaticResource BorderArea3}"
                            Width="{TemplateBinding Width}"
                            Height="40">
                        <TextBlock Margin="20 0" 
                                   Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                   Foreground="{StaticResource BrushBtnWhite}"
                                   FontFamily="Biome"
                                   FontWeight="SemiBold"
                                   FontSize="20"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
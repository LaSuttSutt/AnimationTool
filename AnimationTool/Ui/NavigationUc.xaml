<UserControl x:Class="AnimationTool.Ui.NavigationUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AnimationTool.Ui"
             xmlns:controls="clr-namespace:AnimationTool.Ui._Controls"
             mc:Ignorable="d"
             Background="Transparent"
             d:DataContext="{d:DesignInstance Type=local:NavigationUcViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />   <!-- Navigation Buttons -->
            <RowDefinition Height="*" />      <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Navigation Buttons -->
        <Border Grid.Row="0" Margin="15"
                Style="{StaticResource BorderArea2}">

            <controls:TabUc Margin="20"
                            TabNames="{Binding TabNames}"
                            SelectedTab="{Binding SelectedTab, Mode=TwoWay}" />
        </Border>

        <!-- Content -->
        <ContentControl Grid.Row="1" Content="{Binding SelectedPage}" />

    </Grid>

</UserControl>
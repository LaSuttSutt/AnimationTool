<UserControl x:Class="AnimationTool.Ui.NavigationUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AnimationTool.Ui"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local:NavigationUcViewModel}"
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />   <!-- Navigation Buttons -->
            <ColumnDefinition Width="*" />      <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- Navigation Buttons -->
        <Grid Grid.Column="0" Width="300" Background="{StaticResource MahApps.Brushes.Accent3}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Animations -->
                <RowDefinition Height="Auto" /> <!-- Multi-File -->
            </Grid.RowDefinitions>
            
            <RadioButton Grid.Row="0"
                         Style="{DynamicResource NavigationBtn}"
                         Content="Animations"
                         Command="{Binding NavToAnimationsCommand}"
                         IsChecked="True" />
            <RadioButton Grid.Row="1"
                         Style="{DynamicResource NavigationBtn}"
                         Content="Multi-File" />

        </Grid>

        <!-- Content -->
        <ContentControl Grid.Column="1" Content="{Binding SelectedPage}" />

    </Grid>

    <UserControl.Resources>
        <Style TargetType="RadioButton" x:Key="NavigationBtn">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10 10 10 0" />
            <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="NavBorder"
                                BorderBrush="{StaticResource MahApps.Brushes.Gray1}"
                                Background="{StaticResource MahApps.Brushes.Accent3}"
                                BorderThickness="1">

                            <Border x:Name="SelectionBorder" Background="Transparent">
                                <TextBlock x:Name="NavBtnFont"
                                           Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="White"
                                           FontFamily="Biome"
                                           FontWeight="SemiBold"
                                           FontSize="20" />
                            </Border>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="NavBorder"
                                        Property="Background"
                                        Value="{StaticResource MahApps.Brushes.Accent}" />
                                <Setter TargetName="NavBtnFont"
                                        Property="Foreground"
                                        Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="SelectionBorder"
                                        Property="Background"
                                        Value="{StaticResource MahApps.Brushes.Accent2}" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

</UserControl>
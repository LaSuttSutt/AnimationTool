<UserControl x:Class="AnimationTool.Ui.Animations.AnimationsUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AnimationTool.Ui.Animations"
             mc:Ignorable="d"
             Background="Transparent"
             d:DataContext="{d:DesignInstance Type=local:AnimationsUcViewModel}"
             d:DesignHeight="500" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />    <!-- Load Sprites -->
            <ColumnDefinition />                <!-- Preview & Player -->
        </Grid.ColumnDefinitions>

        <!-- Load Sprites -->
        <Border Grid.Column="0" Margin="0 15 15 15"
                Style="{StaticResource BorderArea2}">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />     <!-- Open sprites -->
                    <RowDefinition />                   <!-- Loaded Sprites -->
                </Grid.RowDefinitions>

                <!-- Open sprites -->
                <Button Grid.Row="0" Style="{StaticResource StandardBtn}"
                        Background="{StaticResource BrushHover}"
                        Content="Open sprites" Command="{Binding LoadSpritesCommand}">
                </Button>

                <!-- Loaded Sprites -->
                <Border Grid.Row="1" Margin="0 15 0 0"
                        Style="{StaticResource BorderArea3}">
                    <ListBox Margin="20" Background="Transparent" Padding="0"
                             ItemsSource="{Binding Sprites}"
                             SelectedItem="{Binding SelectedSprite}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="SnapsToDevicePixels" Value="True" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Height="40" BorderThickness="0 0 0 1"
                                                    CornerRadius="20"
                                                    BorderBrush="{StaticResource BrushBorder2 }"
                                                    Background="Transparent" Margin="10 5 10 0">
                                                <Border x:Name="SelectionBorder" Background="Transparent"
                                                        CornerRadius="20">
                                                    <TextBlock Text="{Binding Name}"
                                                               Margin="20 0"
                                                               FontFamily="Biome"
                                                               FontWeight="SemiBold"
                                                               FontSize="20"
                                                               VerticalAlignment="Center"
                                                               Foreground="{StaticResource BrushBtnWhite}" />
                                                </Border>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="SelectionBorder"
                                                            Property="Background"
                                                            Value="{StaticResource BrushHover}" />
                                                </Trigger>

                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="SelectionBorder"
                                                            Property="Background"
                                                            Value="{StaticResource BrushPress}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListBox.Resources>
                    </ListBox>
                </Border>
            </Grid>
        </Border>

        <!-- Preview & Player -->
        <Border Grid.Column="1" Margin="0 15 15 15"
                Style="{StaticResource BorderArea2}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Margin="0 0 0 20"
                        Style="{StaticResource BorderArea3}">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Zoom" Width="120" HorizontalAlignment="Center"
                                       Style="{StaticResource BorderLabel}" />
                                <RadioButton Style="{DynamicResource RadioButton}"
                                             Content="1x" Margin="5 0" IsChecked="True"
                                             Command="{Binding SetZoomCommand}"
                                             CommandParameter="1" Width="40" />
                                <RadioButton Style="{DynamicResource RadioButton}"
                                             Content="2x"
                                             Command="{Binding SetZoomCommand}"
                                             CommandParameter="2" Width="40" />
                                <RadioButton Style="{DynamicResource RadioButton}"
                                             Content="3x" Margin="5 0"
                                             Command="{Binding SetZoomCommand}"
                                             CommandParameter="3" Width="40" />
                                <RadioButton Style="{DynamicResource RadioButton}"
                                             Content="4x"
                                             Command="{Binding SetZoomCommand}"
                                             CommandParameter="4" Width="40" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                <Label Content="Ground" Width="120" HorizontalAlignment="Center"
                                       Style="{StaticResource BorderLabel}" />
                                <Label Content="{Binding Ground}" 
                                       Width="85" HorizontalAlignment="Center" 
                                       Margin="5 0 0 0"
                                       Style="{StaticResource BorderLabel}" />
                                <Button Style="{DynamicResource StandardBtn}"
                                        Background="Transparent"
                                        Content="-" Margin="5 0" Height="40"
                                        Command="{Binding ChangeGroundCommand}"
                                        CommandParameter="-1" Width="40" />
                                <Button Style="{DynamicResource StandardBtn}"
                                        Background="Transparent"
                                        Content="+" Height="40"
                                        Command="{Binding ChangeGroundCommand}"
                                        CommandParameter="1" Width="40" />
                            </StackPanel>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource BorderArea3}">
                    <Image Source="{Binding ImageSource}"
                           Stretch="{Binding PreviewStretch}"
                           VerticalAlignment="Center" />
                </Border>

                <Border Grid.Row="2" Height="100" Margin="0 20 0 0"
                        Style="{StaticResource BorderArea3}" />
            </Grid>
        </Border>
    </Grid>

</UserControl>
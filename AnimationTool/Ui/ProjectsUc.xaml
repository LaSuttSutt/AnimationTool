<UserControl x:Class="AnimationTool.Ui.ProjectsUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AnimationTool.Ui"
             xmlns:ctrls="clr-namespace:AnimationTool.Ui._Controls"
             d:DataContext="{d:DesignInstance Type=local:ProjectsUcViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="800" d:DesignWidth="500">
    <Grid>
        <Border Background="{StaticResource BrushBorder2}"
                CornerRadius="20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />     <!-- Projects-Header -->
                    <RowDefinition />                   <!-- Project-List -->
                </Grid.RowDefinitions>

                <!-- Projects-Header -->
                <Border Grid.Row="0"
                        Height="40"
                        Margin="20"
                        CornerRadius="20"
                        BorderThickness="1"
                        BorderBrush="{StaticResource BrushBorder}"
                        Background="{StaticResource BrushBorder3}">

                    <Grid Margin="5 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ctrls:LabelStd Grid.Column="0"
                                        Margin="15 0 0 0"
                                        Text="Projects" />

                        <Button Grid.Column="1" Width="30" Height="30">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="BtnBorder"
                                            Background="{StaticResource BrushHover}"
                                            CornerRadius="15"
                                            BorderThickness="1"
                                            BorderBrush="{StaticResource BrushBorder2}">
                                        <Border x:Name="SelBorder"
                                                CornerRadius="15">
                                            <Path Data="M 5,14 L 23,14 M 14,5 L 14,23"
                                                  Stroke="{StaticResource BrushBtnWhite}"
                                                  StrokeThickness="3" />
                                        </Border>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="SelBorder"
                                                    Property="Background"
                                                    Value="{StaticResource BrushHover}" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="BtnBorder"
                                                    Property="Background"
                                                    Value="{StaticResource BrushPress}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Project-List -->
                <Border Grid.Row="1" Margin="20 0 20 20"
                        Background="{StaticResource BrushBorder3}"
                        CornerRadius="20"
                        BorderBrush="{StaticResource BrushBorder}"
                        BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <ListBox Margin="20" Background="Transparent"
                                 ItemsSource="{x:Static local:ProjectsUcViewModel.TestData}"
                                 SelectionMode="Single">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ctrls:TextBoxUc x:Name="ProjectItem" 
                                                                 Text="{Binding Project.Name}" />
                                                
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ProjectItem"
                                                                Property="IsSelected"
                                                                Value="True" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                
                                
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <ctrls:TextBoxUc Text="Hallo"></ctrls:TextBoxUc>
                    </StackPanel>

                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>
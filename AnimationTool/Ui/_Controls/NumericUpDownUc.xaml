<UserControl x:Name="Root"
             x:Class="AnimationTool.Ui._Controls.NumericUpDownUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrls="clr-namespace:AnimationTool.Ui._Controls"
             mc:Ignorable="d"
             Background="{StaticResource BrushBorder3}"
             d:DesignHeight="50" d:DesignWidth="300">
    <Border Style="{StaticResource BorderArea3}"
            Background="Transparent" Height="40">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />      <!-- Text on the left -->
                <ColumnDefinition Width="Auto" />   <!-- Up/Down Buttons on the right -->
            </Grid.ColumnDefinitions>

            <!-- Text on the left -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20 0 0 0">
                <ctrls:LabelStd Text="{Binding FieldName, ElementName=Root, FallbackValue=Ground:}"
                                HorizontalAlignment="Left" />

                <ctrls:LabelStd Text="{Binding Text, ElementName=Root, FallbackValue=Test}"
                                HorizontalAlignment="Left" Margin="10 0 15 0" />
            </StackPanel>

            <!-- Up/Down Buttons on the right -->
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button Content="+" Height="19" Width="40" MinHeight="0" Margin="0"
                        Command="{Binding ChangeValueCommand, ElementName=Root}"
                        CommandParameter="{Binding ChangeValueUpParameter, ElementName=Root}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border BorderThickness="2 0 0 1" Padding="0"
                                    BorderBrush="{StaticResource BrushBorder2}"
                                    Background="{StaticResource BrushHover}"
                                    CornerRadius="0 20 0 0">
                                <Border x:Name="Selection" CornerRadius="0 20  0 0">
                                    <ctrls:LabelStd Text="{TemplateBinding Content}"
                                                    Margin="10 0 0 0"
                                                    FSize="15" />
                                </Border>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Selection"
                                            Property="Background"
                                            Value="{StaticResource BrushHover}">
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Selection"
                                            Property="Background"
                                            Value="{StaticResource BrushPress}">
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="-" Height="19" Width="40" MinHeight="0" Margin="0"
                        Command="{Binding ChangeValueCommand, ElementName=Root}"
                        CommandParameter="{Binding ChangeValueDownParameter, ElementName=Root}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border BorderThickness="2 1 0 0" Padding="0"
                                    BorderBrush="{StaticResource BrushBorder2}"
                                    Background="{StaticResource BrushHover}"
                                    CornerRadius="0 0 20 0">
                                <Border x:Name="Selection" CornerRadius="0 0  20 0">
                                    <ctrls:LabelStd Text="{TemplateBinding Content}"
                                                    Margin="12 -2 0 0"
                                                    FSize="15" />
                                </Border>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Selection"
                                            Property="Background"
                                            Value="{StaticResource BrushHover}">
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Selection"
                                            Property="Background"
                                            Value="{StaticResource BrushPress}">
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
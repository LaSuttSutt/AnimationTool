<UserControl x:Name="Root"
             x:Class="AnimationTool.Ui._Controls.TabUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrls="clr-namespace:AnimationTool.Ui._Controls"
             mc:Ignorable="d"
             Background="{StaticResource BrushBorder3}"
             d:DesignHeight="50" d:DesignWidth="600">
    <ListBox Background="Transparent" ItemsSource="{Binding TabNames, ElementName=Root}"
             SelectionMode="Single"
             SelectedValue="{Binding SelectedTab, ElementName=Root}"
             AlternationCount="9999">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Rows="1" />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>

        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="ItemBorder"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource BrushBorder2}"
                                    BorderThickness="1">
                                <Border x:Name="ItemSelectionBorder">
                                    <ctrls:LabelStd Margin="20 0"
                                                    HorizontalAlignment="Center"
                                                    Text="{Binding}" />
                                </Border>
                            </Border>

                            <ControlTemplate.Triggers>
                                <DataTrigger
                                    Binding="{Binding RelativeSource={RelativeSource Self},
                                                Path=(ItemsControl.AlternationIndex)}"
                                    Value="0">
                                    <Setter TargetName="ItemBorder"
                                            Property="CornerRadius"
                                            Value="20 0 0 20" />
                                    <Setter TargetName="ItemSelectionBorder"
                                            Property="CornerRadius"
                                            Value="20 0 0 20" />
                                </DataTrigger>
                                <DataTrigger Value="True">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource IsLastConverter}">
                                            <Binding RelativeSource="{RelativeSource Self}"
                                                     Path="(ItemsControl.AlternationIndex)" />
                                            <Binding ElementName="Root"
                                                     Path="TabNames.Count" />
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter TargetName="ItemBorder"
                                            Property="CornerRadius"
                                            Value="0 20 20 0" />
                                    <Setter TargetName="ItemSelectionBorder"
                                            Property="CornerRadius"
                                            Value="0 20 20 0" />
                                </DataTrigger>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ItemSelectionBorder"
                                            Property="Background"
                                            Value="{StaticResource BrushHover}" />
                                </Trigger>

                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="ItemSelectionBorder"
                                            Property="Background"
                                            Value="{StaticResource BrushPress}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListBox.ItemContainerStyle>
    </ListBox>
</UserControl>
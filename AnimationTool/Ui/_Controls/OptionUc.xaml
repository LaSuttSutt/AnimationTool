<UserControl x:Name="Root"
             x:Class="AnimationTool.Ui._Controls.OptionUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrls="clr-namespace:AnimationTool.Ui._Controls"
             mc:Ignorable="d"
             Background="{StaticResource BrushBorder3}"
             d:DesignHeight="50" d:DesignWidth="300">
    <Border Style="{StaticResource BorderArea3}"
            Background="Transparent" Height="40">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />      <!-- Property-Text -->
                <ColumnDefinition Width="Auto" />   <!-- Options -->
            </Grid.ColumnDefinitions>

            <!-- Property-Text -->
            <ctrls:LabelStd Grid.Column="0"
                            Text="{Binding Text, ElementName=Root}"
                            Margin="20 0 0 0" />

            <!-- Options -->
            <ListBox Grid.Column="1"
                     ItemsSource="{Binding Options, ElementName=Root}"
                     SelectedItem="{Binding SelectedOption, ElementName=Root}"
                     Background="Transparent"
                     Margin="20 0 0 0"
                     SelectionMode="Single">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="ItemBorder"
                                            Background="Transparent"
                                            BorderBrush="{StaticResource BrushBorder2}"
                                            BorderThickness="1 0 0 0">
                                        <Border x:Name="HoverBorder">
                                            <TextBlock x:Name="ItemText"
                                                       Text="{Binding Display}"
                                                       Margin="7 5"
                                                       VerticalAlignment="Center"
                                                       FontFamily="Biome"
                                                       FontWeight="SemiBold"
                                                       FontSize="20" />
                                        </Border>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsLast}" Value="True">
                                            <Setter TargetName="ItemBorder"
                                                    Property="CornerRadius"
                                                    Value="0 20 20 0">
                                            </Setter>
                                            <Setter TargetName="HoverBorder"
                                                    Property="CornerRadius"
                                                    Value="0 20 20 0">
                                            </Setter>
                                            <Setter TargetName="ItemText"
                                                    Property="Margin"
                                                    Value="7 5 10 5">
                                            </Setter>
                                        </DataTrigger>

                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="HoverBorder"
                                                    Property="Background"
                                                    Value="{StaticResource BrushHover}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder"
                                                    Property="Background"
                                                    Value="{StaticResource BrushPress}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
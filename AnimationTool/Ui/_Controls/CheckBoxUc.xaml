<UserControl x:Name="Root"
             x:Class="AnimationTool.Ui._Controls.CheckBoxUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="{StaticResource BrushBorder3}"
             d:DesignHeight="50" d:DesignWidth="300">
    <Border Style="{StaticResource BorderArea3}"
            Height="40" Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />      <!-- Text on the left -->
                <ColumnDefinition Width="Auto" />   <!-- Checkbox on the right -->
            </Grid.ColumnDefinitions>

            <!-- Text on the left -->
            <TextBlock Grid.Column="0" Margin="20 0 0 0"
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Foreground="{StaticResource BrushBtnWhite}"
                       FontFamily="Biome"
                       FontWeight="SemiBold"
                       FontSize="20"
                       Text="{Binding CheckBoxLabel, ElementName=Root, FallbackValue=Flip X:}" />

            <!-- Checkbox on the right -->
            <CheckBox Grid.Column="1" IsChecked="{Binding IsChecked, ElementName=Root}"
                      Margin="20 0 0 0">
                <CheckBox.Template>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="MainBorder" 
                                BorderThickness="1" 
                                BorderBrush="{StaticResource BrushBorder2}"
                                Background="Transparent"
                                Width="40" 
                                Margin="-1" 
                                CornerRadius="20">
                            <Border BorderThickness="1"
                                    BorderBrush="{StaticResource BrushBorder3}"
                                    Background="{StaticResource BrushHover}"
                                    CornerRadius="18">

                                <Path x:Name="CheckIcon" Data="M 8,20 L 15,27 L 27,12"
                                      Stroke="{StaticResource BrushBtnWhite}"
                                      StrokeThickness="3" />
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" 
                                        Property="Background"
                                        Value="{StaticResource BrushHover}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="CheckIcon"
                                        Property="Stroke"
                                        Value="Transparent" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </CheckBox.Template>
            </CheckBox>
        </Grid>
    </Border>
</UserControl>